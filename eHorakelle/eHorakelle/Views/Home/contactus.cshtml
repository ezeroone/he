@model eZeroOne.eHorakelle.Models.ContactUs
@{
    ViewBag.Title = "contact us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<!-- BEGIN .content-wrapper -->

<div class="content-wrapper clearfix">
    <h2>Contact us</h2><br/>
    <!-- BEGIN .main-content -->
    <div class="main-content left-main-content page-content">

        <div id="google-map" style="height: 275px;"></div>

        <script type="text/javascript">

            var lat = '7.2220533';
            var longi = '79.97801779999998';
            var latlng = new google.maps.LatLng(lat, longi);
            var myOptions = {
                zoom: 10,
                center: latlng,
                scrollwheel: true,
                scaleControl: false,
                disableDefaultUI: false,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            mapContent = new google.maps.Map(document.getElementById("google-map"), myOptions);
            var contentStringContent = '<div class="gmap-content"><h2>Horakelle Estate</h2><p>Dunugha, Gampaha</p></div>';
            var infowindowContent = new google.maps.InfoWindow({
                content: contentStringContent
            });

            var markerContent = new google.maps.Marker({
                position: latlng,
                map: mapContent
            });

            google.maps.event.addListener(markerContent, 'click', function () {
                infowindowContent.open(mapContent, markerContent);
            });

        </script>

        <h3 class="title-style1">Directions<span class="title-block"></span></h3>

        <p><strong>By Bus:</strong> will be updated soon...</p>

        <p><strong>By Taxi/Car:</strong> will be updated soon...</p>

        <hr class="space4" />

        <h3 class="title-style1">Email Us<span class="title-block"></span></h3>

        <hr class="space1" />

        <form action="#" id="commentform" method="post">

            <div class="field-row">
                <label for="contact_name">Name <span>*</span></label>
                <input type="text" name="contact_name" id="contact_name" class="text_input" value="" />
            </div>

            <div class="field-row">
                <label for="email">Email <span>*</span></label>
                <input type="text" name="email" id="email" class="text_input" value="" />
            </div>
            
            <div class="field-row">
                <label for="message_text">Comment <span>*</span></label>
                <textarea name="message" id="message_text" class="text_input" cols="60" rows="9"></textarea>
            </div>

            <input class="button2" type="submit" value="Submit Comment" id="submit" name="submit">

        </form>

        <!-- END .main-content -->
    </div>

    <!-- BEGIN .sidebar -->
    <div class="sidebar right-sidebar">

        <!-- BEGIN .widget -->
        <div class="widget">

            <h4 class="title-style3">Reservations<span class="title-block"></span></h4>

            <!-- BEGIN .widget-reservation-box -->
            <div class="widget-reservation-box">

               
                <a href="/Property/ChooseDate" class="bookbutton" style="color:white">Check Availability</a>

                <!-- END .widget-reservation-box -->
            </div>

            <!-- END .widget -->
        </div>

        <!-- BEGIN .widget -->
        <div class="widget">

            <h4 class="title-style3">Contact Details<span class="title-block"></span></h4>

            <ul class="contact_details_list">
                <li class="phone_list"><strong>Phone:</strong> +94 772-367-061</li>
                <li class="email_list"><strong>Email:</strong> horakelle@icloud.com</li>
                <li class="address_list"><strong>Address:</strong> No 47. Dunugha, Gampaha</li>
            </ul>

            <!-- END .widget -->
        </div>

        <!-- END .sidebar -->
    </div>

    <!-- END .content-wrapper -->
</div>
